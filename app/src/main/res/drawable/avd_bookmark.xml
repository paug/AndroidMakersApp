<?xml version="1.0" encoding="utf-8"?>
<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_bookmark_fab">

    <target android:name="bookmark">

        <aapt:attr name="android:animation">

            <objectAnimator
                android:propertyName="fillColor"
                android:valueFrom="@android:color/white"
                android:valueTo="@color/colorAccent"
                android:duration="300"
                android:interpolator="@android:interpolator/fast_out_linear_in"
                android:valueType="colorType" />

        </aapt:attr>

    </target>

    <target android:name="check">

        <aapt:attr name="android:animation">

            <objectAnimator
                android:propertyName="rotation"
                android:valueFrom="180"
                android:valueTo="0"
                android:duration="300"
                android:interpolator="@android:interpolator/fast_out_slow_in" />

        </aapt:attr>

    </target>

    <target android:name="line1">

        <aapt:attr name="android:animation">

            <objectAnimator
                android:propertyName="pathData"
                android:valueFrom="M7,11L17,11"
                android:valueTo="M10,16L7,13"
                android:duration="260"
                android:interpolator="@android:interpolator/fast_out_linear_in"
                android:valueType="pathType" />

        </aapt:attr>

    </target>

    <target android:name="line1">

        <aapt:attr name="android:animation">

            <objectAnimator
                android:propertyName="strokeColor"
                android:valueFrom="@color/colorAccent"
                android:valueTo="@android:color/white"
                android:duration="120"
                android:interpolator="@android:interpolator/linear"
                android:valueType="colorType" />

        </aapt:attr>

    </target>

    <target android:name="line2">

        <aapt:attr name="android:animation">

            <objectAnimator
                android:propertyName="pathData"
                android:valueFrom="M12,6L12,16"
                android:valueTo="M10.483,15.517L18,8"
                android:duration="260"
                android:interpolator="@android:interpolator/fast_out_linear_in"
                android:valueType="pathType" />

        </aapt:attr>

    </target>

    <target android:name="line2">

        <aapt:attr name="android:animation">

            <objectAnimator
                android:propertyName="strokeColor"
                android:valueFrom="@color/colorAccent"
                android:valueTo="@android:color/white"
                android:duration="120"
                android:interpolator="@android:interpolator/linear"
                android:valueType="colorType" />

        </aapt:attr>

    </target>

</animated-vector>