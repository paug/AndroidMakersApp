<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/sessionInformationsScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/large_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dip"
                    android:layout_marginStart="65dip"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sessionTitleTextView"
                        style="@style/SessionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        tools:text="Title"/>

                    <TextView
                        android:id="@+id/sessionDateAndRoomTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        tools:text="Description"/>

                    <TextView
                        android:id="@+id/sessionDescriptionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        tools:text="Description"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/divider5dip"
                        android:orientation="horizontal"
                        android:paddingBottom="2dp"
                        android:showDividers="middle">

                        <!--TODO: remove the gone visibility when session type will be properly available-->
                        <com.robertlevonyan.views.chip.Chip
                            android:id="@+id/sessionTypeChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"/>

                        <com.robertlevonyan.views.chip.Chip
                            android:id="@+id/sessionLanguageChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_marginBottom="@dimen/large_padding"
                        android:layout_marginTop="@dimen/large_padding"
                        android:background="@color/grey"/>

                    <TextView
                        android:id="@+id/speakersTitleTextView"
                        style="@style/SessionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Detail_speakerLayoutHeaderTitle"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sessionSpeakerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider15dip"
                    android:orientation="vertical"
                    android:showDividers="beginning|middle|end"
                    tools:layout_height="48dp"/>

            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/errorMessageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/Detail_sessionNotFound"
            android:visibility="gone"
            tools:visibility="gone"/>

    </RelativeLayout>

</layout>
